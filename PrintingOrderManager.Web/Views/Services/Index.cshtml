@model PrintingOrderManager.Web.Models.PaginatedList<PrintingOrderManager.Core.DTOs.ServiceDto>

@{
    ViewData["Title"] = "Услуги";
}

<h1>Услуги</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Создать новую</a>
    </p>
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-5">
            <input type="text"
                   name="SearchString"
                   value="@ViewData["CurrentFilter"]"
                   class="form-control"
                   placeholder="Поиск по названию..." />
        </div>
        <div class="col-md-3">
            <input type="number"
                   step="0.01"
                   name="minPriceFilter"
                   value="@ViewBag.MinPriceFilter"
                   class="form-control"
                   placeholder="Мин. цена" />
        </div>
        <div class="col-md-3">
            <input type="number"
                   step="0.01"
                   name="maxPriceFilter"
                   value="@ViewBag.MaxPriceFilter"
                   class="form-control"
                   placeholder="Макс. цена" />
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-outline-primary">Найти</button>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["NameSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-minPriceFilter="@ViewBag.MinPriceFilter"
                       asp-route-maxPriceFilter="@ViewBag.MaxPriceFilter">
                        @Html.DisplayNameFor(model => model.First().ServiceName)
                    </a>
                </th>
                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["PriceSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-minPriceFilter="@ViewBag.MinPriceFilter"
                       asp-route-maxPriceFilter="@ViewBag.MaxPriceFilter">
                        @Html.DisplayNameFor(model => model.First().UnitPrice)
                    </a>
                </th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-sm btn-info">Детали</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-warning">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-danger">Удалить</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Страницы">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a class="page-link"
               asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-minPriceFilter="@ViewBag.MinPriceFilter"
               asp-route-maxPriceFilter="@ViewBag.MaxPriceFilter">Назад</a>
        </li>
        <li class="page-item @nextDisabled">
            <a class="page-link"
               asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-minPriceFilter="@ViewBag.MinPriceFilter"
               asp-route-maxPriceFilter="@ViewBag.MaxPriceFilter">Вперёд</a>
        </li>
    </ul>
</nav>  