@model PrintingOrderManager.Web.Models.PaginatedList<PrintingOrderManager.Core.DTOs.WorkerDto>

@{
    ViewData["Title"] = "Работники";
}

<h1>Работники</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Создать нового</a>
    </p>
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-5">
            <input type="text"
                   name="SearchString"
                   value="@ViewData["CurrentFilter"]"
                   class="form-control"
                   placeholder="Поиск по ФИО или контактам..." />
        </div>
        <div class="col-md-3">
            <select name="positionFilter" class="form-select">
                <option value="">Все должности</option>
                <option value="Менеджер" selected="@(ViewBag.SelectedPosition == "Менеджер")">Менеджер</option>
                <option value="Дизайнер" selected="@(ViewBag.SelectedPosition == "Дизайнер")">Дизайнер</option>
                <option value="Печатник" selected="@(ViewBag.SelectedPosition == "Печатник")">Печатник</option>
                <option value="Программист" selected="@(ViewBag.SelectedPosition == "Программист")">Программист</option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-outline-primary">Найти</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Сбросить</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["NameSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-positionFilter="@ViewBag.SelectedPosition">
                        @Html.DisplayNameFor(model => model.First().WorkerFullName)
                    </a>
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["PositionSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-positionFilter="@ViewBag.SelectedPosition">
                        @Html.DisplayNameFor(model => model.First().Position)
                    </a>
                </th>
                <th>@Html.DisplayNameFor(model => model.First().Contacts)</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.WorkerFullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Position)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contacts)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.WorkerId" class="btn btn-sm btn-info">Детали</a>
                        <a asp-action="DetailsWithItems" asp-route-id="@item.WorkerId" class="btn btn-sm btn-info">Подробно</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.WorkerId" class="btn btn-sm btn-warning">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@item.WorkerId" class="btn btn-sm btn-danger">Удалить</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Страницы">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a class="page-link"
               asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-positionFilter="@ViewBag.SelectedPosition">Назад</a>
        </li>
        <li class="page-item @nextDisabled">
            <a class="page-link"
               asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-positionFilter="@ViewBag.SelectedPosition">Вперёд</a>
        </li>
    </ul>
</nav>