@model PrintingOrderManager.Web.Models.PaginatedList<PrintingOrderManager.Core.DTOs.OrderDto>

@{
    ViewData["Title"] = "Заказы";
}

<h1>Заказы</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Создать новый</a>
    </p>
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-5">
            <input type="text"
                   name="SearchString"
                   value="@ViewData["CurrentFilter"]"
                   class="form-control"
                   placeholder="Поиск по имени клиента..." />
        </div>
        <div class="col-md-3">
            <select name="clientIdFilter" class="form-select">
                <option value="">Все клиенты</option>
                @foreach (var client in ViewBag.Clients)
                {
                    <option value="@client.ClientId" selected="@(ViewBag.SelectedClientId?.ToString() == client.ClientId.ToString())">
                        @client.ClientName
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <select name="statusFilter" class="form-select">
                <option value="">Все статусы</option>
                <option value="Новый" selected="@(ViewBag.SelectedStatus == "Новый")">Новый</option>
                <option value="В процессе" selected="@(ViewBag.SelectedStatus == "В процессе")">В процессе</option>
                <option value="Выполнен" selected="@(ViewBag.SelectedStatus == "Выполнен")">Выполнен</option>
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-outline-primary">Найти</button>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["DateSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-clientIdFilter="@ViewBag.SelectedClientId"
                       asp-route-statusFilter="@ViewBag.SelectedStatus">
                        @Html.DisplayNameFor(model => model.First().PlacementDate)
                    </a>
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["ClientSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-clientIdFilter="@ViewBag.SelectedClientId"
                       asp-route-statusFilter="@ViewBag.SelectedStatus">
                        @Html.DisplayNameFor(model => model.First().ClientName)
                    </a>
                </th>
                <th>@Html.DisplayNameFor(model => model.First().CompletionDate)</th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["StatusSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-clientIdFilter="@ViewBag.SelectedClientId"
                       asp-route-statusFilter="@ViewBag.SelectedStatus">
                        @Html.DisplayNameFor(model => model.First().Status)
                    </a>
                </th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PlacementDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.ClientName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CompletionDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-info">Детали</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-warning">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-danger">Удалить</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Страницы">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a class="page-link"
               asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-clientIdFilter="@ViewBag.SelectedClientId"
               asp-route-statusFilter="@ViewBag.SelectedStatus">Назад</a>
        </li>
        <li class="page-item @nextDisabled">
            <a class="page-link"
               asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-clientIdFilter="@ViewBag.SelectedClientId"
               asp-route-statusFilter="@ViewBag.SelectedStatus">Вперёд</a>
        </li>
    </ul>
</nav>