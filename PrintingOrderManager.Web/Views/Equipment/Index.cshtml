@model PrintingOrderManager.Web.Models.PaginatedList<PrintingOrderManager.Core.DTOs.EquipmentDto>

@{
    ViewData["Title"] = "Оборудование";
}

<h1>Оборудование</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Создать новое</a>
    </p>
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-6">
            <input type="text"
                   name="SearchString"
                   value="@ViewData["CurrentFilter"]"
                   class="form-control"
                   placeholder="Поиск по названию или спецификациям..." />
        </div>
        <div class="col-md-3">
            <select name="modelFilter" class="form-select">
                <option value="">Все модели</option>
                <option value="HP LaserJet" selected="@(ViewBag.SelectedModel == "HP LaserJet")">HP LaserJet</option>
                <option value="Canon imageRUNNER" selected="@(ViewBag.SelectedModel == "Canon imageRUNNER")">Canon imageRUNNER</option>
                <option value="Xerox WorkCentre" selected="@(ViewBag.SelectedModel == "Xerox WorkCentre")">Xerox WorkCentre</option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-outline-primary">Найти</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Сбросить</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["NameSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-modelFilter="@ViewBag.SelectedModel">
                        @Html.DisplayNameFor(model => model.First().EquipmentName)
                    </a>
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["ModelSortParm"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-modelFilter="@ViewBag.SelectedModel">
                        @Html.DisplayNameFor(model => model.First().Model)
                    </a>
                </th>
                <th>@Html.DisplayNameFor(model => model.First().Specifications)</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EquipmentName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Model)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specifications)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.EquipmentId" class="btn btn-sm btn-info">Детали</a>
                        <a asp-action="DetailsWithItems" asp-route-id="@item.EquipmentId" class="btn btn-sm btn-info">Подробно</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.EquipmentId" class="btn btn-sm btn-warning">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@item.EquipmentId" class="btn btn-sm btn-danger">Удалить</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Страницы">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a class="page-link"
               asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-modelFilter="@ViewBag.SelectedModel">Назад</a>
        </li>
        <li class="page-item @nextDisabled">
            <a class="page-link"
               asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-modelFilter="@ViewBag.SelectedModel">Вперёд</a>
        </li>
    </ul>
</nav>